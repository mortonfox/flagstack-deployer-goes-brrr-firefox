{
    "manifest_version": 3,
    "name": "Flagstack Deployer goes brrr",
    "version": "0.0.4",

    "description": "Adds shortcut keys to deploy a green flag",

    "browser_specific_settings": {
        "gecko": {
            "id": "flagstack-deployer-1@mortonfox.com",
            "strict_min_version": "101.0"
        }
    },

    "background": {
        "scripts": ["background.js"]
    },

    "commands": {
        "deploy-green": {
            "suggested_key": {
                "default": "Alt+G"
            },
            "description": "Deploy a green flag"
        },
        "deploy-save": {
            "suggested_key": {
                "default": "Alt+R"
            },
            "description": "Click on save button"
        }
    },

    "permissions": ["activeTab", "scripting"]
}
